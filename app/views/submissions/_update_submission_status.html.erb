<%= bootstrap_form_for @submission,
             url: { controller: "submissions", action: "update_status" },
	     layout: :horizontal, label_col: "no-column" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <span class="status-label">
    <%= f.select :status,
	options_for_select(["Draft", "Pending", "Accepted", "Rejected"],
			   @submission.status.capitalize),
	control_col: "col-lg-3", hide_label: true %>
  </span>

  <%= f.form_group do %>
    <%= f.check_box :status_approved, checked: @status_approved,
    label: "Status approved?", control_col: "col-lg-3" %>
  <% end %>

  <%= f.form_group do %>
    <%= f.check_box :status_published, checked: @status_published,
    label: "Status published?", control_col: "col-lg-3" %>
  <% end %>

  <%= f.form_group do %>
    <%= f.submit "Update application status", class: "btn btn-primary",
      data: { confirm: "Are you sure?" }, control_col: "col-lg-3" %>
  <% end %>
<% end %>
