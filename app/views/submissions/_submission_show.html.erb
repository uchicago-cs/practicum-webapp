<table class="table table-bordered submission-form-show">

  <tbody>
    <tr>
      <th>Applicant</th>
      <td><%= display_name(@submission.student) %></td>
    </tr>

    <tr>
      <th>Project</th>
      <td><%= @submission.project_name %></td>
    </tr>

    <tr>
      <th>Advisor</th>
      <td class="no-word-break">
	<%= display_name(@submission.project.advisor) %>
      </td>
    </tr>

    <tr id="status">
      <th>Status</th>
      <td>
	<% if can? :update_status_of, @submission %>
	  <%= render 'update_submission_status', objects: @submission %>
	<% else %>
	  <%= formatted_status(@submission) %>
	<% end %>
      </td>
    </tr>

    <tr id="interests">
      <th>Interests</th>
      <td><%= @submission.information %></td>
    </tr>

    <tr id="qualifications">
      <th>Qualifications</th>
      <td><%= @submission.qualifications %></td>
    </tr>

    <tr id="courses">
      <th>Courses</th>
      <td><%= @submission.courses %></td>
    </tr>

    <tr>
      <th>Resume</th>
      <td>
	<% if (can? :download_resume, @submission) and
	  @submission.resume.exists? %>
	  <%= link_to "Download", download_resume_path(@submission.id) %>
	<% else %>
	  This student did not upload a resume.
	<% end %>
      </td>
    </tr>
  </tbody>

</table>
