<% if acceptable?(@submission) %>
  <%= bootstrap_form_for(@submission,
			 url: q_path(@submission, :accept_or_reject_submission),
			 html: { method: :patch }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :comments, label: "Comments (optional)",
        class: "submission-comments-box" %>

    <%= f.submit "Accept", class: "btn btn-success",
			     data: { confirm: "Are you sure?" } %>
    <%= f.submit "Reject", class: "btn btn-danger",
			     data: { confirm: "Are you sure?" }  %>
  <% end %>
<% end %>
