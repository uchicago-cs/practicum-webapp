<% if @submission.pending? and before_deadline?("advisor_decision") %>
  <%= link_to "Accept", accept_submission_path(@submission.id),
                        method: :patch, class: "btn btn-success",
			  data: { confirm: "Are you sure?" } %>
  <%= link_to "Reject", reject_submission_path(@submission.id),
                        method: :patch, class: "btn btn-danger",
			  data: { confirm: "Are you sure?" }  %>
<% end %>
