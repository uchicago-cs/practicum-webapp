<h1><%= @user.display_name %>'s Projects</h1>

<% if @user.advisor? or @user.admin? %>

  <% if @user.projects.count > 0 %>
    <table class="table table-bordered">
      <tr>
	<th>Project name</th>
	<th>Quarter</th>
	<th>Date proposed</th>
	<th>Status</th>
	<th>Applicants</th>
	<th>Notes</th>
      </tr>
      <tbody>
	<% @user.current_projects.each do |project| %>
	  <%= render 'project', project: project %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    You have not proposed any projects yet.
  <% end %>

  Click <%= link_to "here", '#' %> to show projects from previous quarters.

<% end %>
