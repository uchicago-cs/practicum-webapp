<h1>All users</h1>
<!-- We probably want to paginate this and add a search bar. -->
<% if @users.count > 0 %>
  <table class="table table-bordered">
    <tr>
      <th>E-mail address</th>
      <th>Roles</th>
    </tr>
    <tbody>
      <% @users.each do |user| %>
	<tr>
	  <td><%= link_to user.email, user %></td>
	  <td><%= user.formatted_roles %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
<% end %>
