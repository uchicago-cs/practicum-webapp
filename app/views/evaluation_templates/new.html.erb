<h2>New Evaluation Template</h2>

<p>
  You will be able to add questions to the template after entering the
  information below.
</p>

<br />

<%= bootstrap_form_for(@evaluation_template,
		       layout: :horizontal, control_col: "col-sm-3",
		       label_col: "col-sm-1") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :name %>

  <%= f.select :quarter_id, @quarters %>

  <%= f.form_group help: active_warning do %>
    <%= f.check_box :active, label: "Active?" %>
  <% end %>

  <%= f.form_group help: grade_warning do %>
    <%= f.check_box :has_grade, label: "Include grade question?" %>
  <% end %>

  <%=f.text_field :start_date, class: "datetimepicker", help: start_date_help%>

  <%= f.text_field :end_date, class: "datetimepicker", help: end_date_help %>

  <%= f.form_group do %>
    <%= f.submit "Create template", class: "btn btn-success",
	data: { confirm: "Are you sure?" } %>
  <% end %>
<% end %>
