<%= bootstrap_form_for(template,
		       layout: :horizontal, control_col: "col-sm-3",
		       label_col: "col-sm-1",
		       url: { action: 'update_basic_info' }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :name %>

  <%= f.select :quarter_id, @quarters,
      selected: @quarter.id %>

  <%= f.form_group help: active_warning do %>
    <%= f.check_box :active, label: "Active?", checked: template.active? %>
  <% end %>

  <%= f.form_group help: grade_warning do %>
    <%= f.check_box :has_grade, label: "Include grade question?",
    checked: template.has_grade_question? %>
  <% end %>

  <%= f.form_group do %>
    <%= f.submit "Update template", class: "btn btn-success",
	data: { confirm: "Are you sure?" } %>
  <% end %>
<% end %>
