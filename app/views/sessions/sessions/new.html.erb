<h2>Sign In</h2>

<%= bootstrap_form_for(resource, as: 'user',
		       url: :user_session, layout: :horizontal,
		       control_col: "col-xs-2") do |f| %>

  <div><br />
  <%= f.text_field :auth_attr, autofocus: true,
  label: "CNetID or E-mail address" %></div>

  <div><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div>
    <%= f.form_group do %>
      <%= f.submit "Sign in", class: "btn btn-primary" %>
  <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
