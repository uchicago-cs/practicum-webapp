<h2>Sign In (CNetID)</h2>

<%= bootstrap_form_for(resource, as: resource_name,
		       url: :user_session, layout: :horizontal,
		       control_col: "col-xs-2") do |f| %>

  <div><br />
  <%= f.text_field :cnet, autofocus: true, label: "CNetID" %></div>

  <div><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div>
    <%= f.form_group do %>
      <%= f.submit "Sign in", class: "btn btn-primary" %>
  <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
