<h3>Create a new quarter</h3>
<!-- Not DRY. -->
<%= bootstrap_form_for @quarter do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.select :season, %w(Spring Summer Autumn Winter),
               selected: default_season, hide_label: true %>
  <%= f.label :season, class: 'inline' %>
  <br />

  <%= f.select :year, (Time.now.year - 5..Time.now.year + 5),
               selected: Time.now.year, hide_label: true %>
  <%= f.label :year, class: 'inline' %>
  <br />


  <div class="datetimepicker input-append">
    <%= f.text_field :start_date, hide_label: true,
    placeholder: l(start_date, format: :twb), as: :string %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%#= f.label :start_date, wrapper: :append # Needed? %>
  <%= f.label :start_date, class: 'inline' %>
  <br />

  <div class="datetimepicker input-append">
    <%= f.text_field :project_proposal_deadline, hide_label: true,
    placeholder: l(default_deadline("proposal"), format: :twb), as: :string %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%= f.label :project_proposal_deadline, class: 'inline' %>
  <br />

  <div class="datetimepicker input-append">
    <%= f.text_field :student_submission_deadline,
    placeholder: l(default_deadline("submission"), format: :twb),
      as: :string, hide_label: true %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%= f.label :student_submission_deadline, class: 'inline' %>
  <br />

  <div class="datetimepicker input-append">
    <%= f.text_field :advisor_decision_deadline, hide_label: true
    placeholder: l(default_deadline("decision"), format: :twb), as: :string %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%= f.label :advisor_decision_deadline, class: 'inline' %>
  <br />

  <div class="datetimepicker input-append">
    <%= f.text_field :admin_publish_deadline, hide_label: true,
    placeholder: l(default_deadline("admin"), format: :twb), as: :string %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%= f.label :admin_publish_deadline,
      "Admin application publishing deadline (soft, not strict)",
      class: 'inline' %>
  <br />

  <div class="datetimepicker input-append">
    <%= f.text_field :end_date, hide_label: true,
    placeholder: l(end_date, format: :twb), as: :string %>
    <span class="add-on">
      <i data-date-icon="icon-calendar" data-time-icon="icon-time"></i>
    </span>
  </div>
  <%= f.label :end_date, class: 'inline' %>
  <br />

  <%= f.check_box :current, hide_label: true %>
  <%= f.label :current, "Make this the current quarter?", class: 'inline' %>
  <br />

  <%= f.submit "Create quarter", class: "btn btn-primary" %>
<% end %>
