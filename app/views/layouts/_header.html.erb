<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Computer Science Practicum", root_path, id: "logo" %>
      <nav>
	<ul class="nav pull-right">
	  <% if !user_signed_in? %>
	    <li><%= link_to "Sign up", new_user_registration_path %></li>
	    <li><%= link_to "Sign in", new_user_session_path %></li>
	  <% else %>
	    <li><p class="navbar-text">
	      You are signed in as <%= current_user.email %>.
	    </p></li>
	  <% end %>

	  <% if can? :read, Submission %>
	    <li class="dropdown">
	      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		Personal
		<span class="caret"></span>
	      </a>
	      <ul class="dropdown-menu" role="menu">
		<li><%= link_to "My account", current_user %></li>
		<li><%= link_to "Sign out", destroy_user_session_path,
		method: :delete %></li>
		<li class="divider"></li>
                <% if can? :my_submissions, User %>
		  <li>
		    <%= link_to "My applications",
		    users_submissions_path(current_user.id) %>
		  </li>
                <% end %>
		<% if can? :my_projects, User %>
		  <li><%= link_to "Propose a project", new_project_path %></li>
		  <li>
		    <%= link_to "My projects",
		    users_projects_path(current_user.id) %>
		  </li>
                <% end %>
	      </ul>
	    </li>
	    <li>
	  <% end %>

	  <% if can? :manage, :all %>
	    <li class="dropdown">
	      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		Administrative
		<span class="caret"></span>
	      </a>
	      <ul class="dropdown-menu" role="menu">
		<li><%= link_to "Users", users_path %></li>
		<li><%=link_to "Pending projects", pending_projects_path%></li>
		<li><%= link_to "Applications", submissions_path %></li>
		<li><%= link_to "Quarters", quarters_path %></li>
		<li><%= link_to "Evaluations", evaluations_path %></li>
	      </ul>
	    </li>
	  <% end %>

	  <% if can? :read, Project %>
	    <li><%= link_to "Projects", projects_path %></li>
	  <% end %>

	</ul>
      </nav>
    </div>
  </div>
</header>
