<h2><%= @project.name %></h2>

<% if can? :update, @project %>
  <div>
    <p>
      Click <%= link_to "here", edit_project_path %>
      to edit this project's information.
    </p>
  </div>
  <br>
<% end %>

<%= render 'student_submission_deadline' if signed_in? %>

<%= render 'project_long', object: @project%>

<% if can? :manage, @project %>
  <%= render 'edit_status', object: @project %>
<% end %>

<% if (can? :apply_to, @project) and before_deadline?("student_submission") %>
  <p>
    Click <%= link_to "here", new_project_submission_path(@project.id),
    id: "new-submission-link" %> to apply to this project.
  </p>
<% elsif (can? :manage, Project) %>
  <p>
    Click <%= link_to "here", new_project_submission_path(@project.id),
    id: "new-submission-link" %> to create an application for a student.
  </p>
<% end %>
