<h1><%= @project.name %></h1>

<%= render 'project_long', object: @project%>

<% if can? :apply_to, @project %>
  Click <%= link_to "here", new_project_submission_path(@project.id) %>
  to apply.
<% else %>
  You may not apply to this project.
  <!-- You have already applied to participate in this project. Please wait
  for the advisors to review your application. You will be notified by
  e-mail when they have made their decision. -->
<% end %>

<% if can? :update, @project %>
  <div>
    Click <%= link_to "here", edit_project_path %>
    to edit the project information.
  </div>
<% end %>

<% if can? :accept, @project %>
  <div>
    Click <%= link_to "here", edit_status_project_path %>
    to change this project's status or request changes to the proposal.
  </div>
<% end %>

<% if can? :read_submissions_of, @project %>
  <% @project.submissions.each do |submission| %>
    <div>
      <%= render 'project_submission', submission: submission %>
    </div>
  <% end %>
<% end %>

<% if can? :clone, @project %>
  <%= render 'project_clone', object: @project %>
<% end %>
