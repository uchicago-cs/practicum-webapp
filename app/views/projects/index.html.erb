<h1><%= formatted_current_quarter%> Projects</h1>

<div class="alert alert-info">
  <strong>Application deadline</strong>:
  <%= formatted_deadline("student_submission") %>
</div>

<% if @projects.present? %>
  <table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>Advisor</th>
      <!-- Summary column? -->
    </tr>
    <tbody>
      <% @projects.each do |project| %>
	<tr>
	  <td><%= link_to project.name, project %></td>
	  <td><%= display_name(project.advisor) %></td>
	</tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  There are currently no projects available.
<% end %>
