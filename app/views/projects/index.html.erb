<h2><%= formatted_current_quarter %> Projects</h2>

<%= render 'student_submission_deadline' %>

<% if @projects.present? %>
  <table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>Advisor</th>
    </tr>
    <tbody>
      <% @projects.each do |project| %>
	<tr>
	  <td><%= link_to project.name, project %></td>
	  <td><%= display_name(project.advisor) %></td>
	</tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  There are currently no projects available.
<% end %>
