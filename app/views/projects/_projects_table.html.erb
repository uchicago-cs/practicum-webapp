<table class="table table-bordered">
  <colgroup>
    <col style="width: 80%;">
    <col style="width: 20%;">
  </colgroup>

  <tr>
    <th>Title</th>
    <th>Advisor</th>
  </tr>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
	<td><%= q_link_to project.name, project %></td>
	<td><%= display_name(project.advisor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
